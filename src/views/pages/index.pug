extends ../layouts/main.pug
block content
  style.

    img { display: block; }
    
    * { box-sizing: border-box; }
  main.main.block
    section.section.block(class="pb-12  md:pb-16")
      .malker.mx-auto.bg-gray-200.flex.items-center.justify-center.w-full(class="h-[250px]")
        .bilboard.flex.bg-gray-100.h-full.items-center.justify-center(class="w-[970px]")
          h2.text-2xl.font-bold.text-gray-500 BILLBOARD
      .container.py-6.mx-auto
        .breadcrumb.flex.items-center(class="px-[1rem] xl:px-0")
