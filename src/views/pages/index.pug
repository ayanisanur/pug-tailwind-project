            { img: "https://iaahbr.tmgrup.com.tr/0723ef/747/747/450/0/1814/1365?u=https://iahbr.tmgrup.com.tr/2026/01/22/yapay-zeka-tehlikesi-kapida-musktan-dunyayi-sarsacak-itiraf-insanligin-fisini-cekecek-1769114414543.jpg", title: "Siber Güvenlik Önlemleri" },
            { img: "https://iaahbr.tmgrup.com.tr/0723ef/747/747/450/0/1814/1365?u=https://iahbr.tmgrup.com.tr/2026/01/22/yapay-zeka-tehlikesi-kapida-musktan-dunyayi-sarsacak-itiraf-insanligin-fisini-cekecek-1769114414543.jpg", title: "Donanım Dünyasında Son Durum" },
