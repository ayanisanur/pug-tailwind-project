            a.color-dark.transition-all(href="#" class="hover:underline text-xs ") A Haber
            svg(xmlns="http://www.w3.org/2000/svg" width="6" height="10" viewBox="0 0 6 10" class="w-auto h-[10px] fill-current text-gray-400")
              path(d="M.204 10.306a.697.697 0 0 0 .49.194.722.722 0 0 0 .49-.194l4.654-4.434A.524.524 0 0 0 6 5.5a.504.504 0 0 0-.162-.372L1.184.694a.716.716 0 0 0-.98 0 .637.637 0 0 0 0 .933l4.062 3.87L.2 9.373a.642.642 0 0 0 .005.933Z")
